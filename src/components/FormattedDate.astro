---
import { getLangFromUrl } from "../i18n/utils"

const { date, isSameDay, hideTime } = Astro.props
---

<time datetime={date.toISOString().replace("Z", "")}>
  {
    new Date(date.toISOString().replace("Z", "")).toLocaleString(
      getLangFromUrl(Astro.url),
      {
        dateStyle: isSameDay ? undefined : "medium",
        timeStyle: hideTime ? undefined : "short",
      },
    )
  }
</time>
