---
import { getLangFromUrl } from "../i18n/utils"
---

<time datetime={Astro.props.date.toISOString().replace("Z", "")}>
  {
    new Date(Astro.props.date.toISOString().replace("Z", "")).toLocaleString(
      getLangFromUrl(Astro.url),
      {
        dateStyle: "medium",
        timeStyle: "short",
      },
    )
  }
</time>
