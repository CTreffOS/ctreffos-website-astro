---
import { isSameDay } from "date-fns"
import { utc } from "@date-fns/utc";
import FormattedDate from "./FormattedDate.astro"

const { startDate, endDate, isAllDay } = Astro.props

const showRange = isAllDay ? !isSameDay(startDate, endDate, {in: utc}) : true
---

<FormattedDate date={startDate} hideTime={isAllDay} />
{
  showRange && (
    <>
      {" - "}
      <FormattedDate
        date={endDate}
        isSameDay={isSameDay(startDate, endDate, {in: utc})}
        hideTime={isAllDay}
      />
    </>
  )
}
