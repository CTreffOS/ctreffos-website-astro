---
import { isSameDay } from "date-fns"
import FormattedDate from "./FormattedDate.astro"

const { startDate, endDate, isAllDay } = Astro.props
---

<FormattedDate date={startDate} hideTime={isAllDay} />
{
  (
    <>
      {" - "}
      <FormattedDate date={endDate} isSameDay={isSameDay(startDate, endDate)} hideTime={isAllDay} />
    </>
  )
}
